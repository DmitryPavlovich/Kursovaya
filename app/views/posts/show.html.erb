<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-warning'%>
<%= link_to "Destroy post", post_path(@post), method: :delete, data: {confirm: "Want to delete an article"}, :class => 'btn btn-danger'%>
<hr>
<h1>All comments</h1>
  <% @post.comments.each do |comment| %>
    <div class="alert alert-light">
      <p><strong><%= comment.user %></strong>: <%= comment.body %> </p>
    </div>
  <% end %>
<hr>
<h4>Add comment</h4>
  <%= form_for ([@post, @post.comments.build]) do |f| %>
    <p>
      User<br>
      <%= f.text_field(:user, {:class => 'form-control'})%>
    </p>

    <p>
      Text comment<br>
      <%= f.text_area(:body, {:class => 'form-control'})%>
    </p>

    <p>
      <%= f.submit("Add",{:class => 'btn btn-warning'})%>
    </p>
  <% end %>
